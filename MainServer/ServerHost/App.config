    <behaviors>
      <serviceBehaviors>
        <behavior name="MainServer.ClientSerivceBehavior">
          <serviceMetadata httpGetEnabled="True" httpsGetEnabled="True"/>
          <serviceDebug includeExceptionDetailInFaults="False" />
         </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

</configuration>