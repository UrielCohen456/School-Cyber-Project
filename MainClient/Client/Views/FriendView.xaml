<UserControl x:Class="Client.Views.FriendView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800"
             Background="White">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding FriendUserInfo.Id}"
                       FontSize="24" Margin="0 0 10 0"/>
            <TextBlock Text="{Binding FriendUserInfo.Name}"
                        FontSize="24" Margin="0 0 30 0"/>
            
            <TextBlock Text="{Binding FriendInfo.Status}"
                                    FontSize="24"
                       />
        </StackPanel>
    </Grid>
</UserControl>
